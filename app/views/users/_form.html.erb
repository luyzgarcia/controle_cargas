<%= form_for(@user, :html => { :role => "form", :class =>"form-horizontal"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
	  <div class="alert alert-danger" role="alert">
	  	<strong>Erro salvar usu√°rio!</strong>
	  	<br/><br/>
	    <ul>
	    	<% @user.errors.full_messages.each do |message| %>
	        	<li><%= message %></li>
	      	<% end %>
	    </ul>
	   </div>
    </div>
  <% end %>
  
	<div class="form-wrapper-group">
		<div class="form-group">
			<%= f.label :nome, 'Nome', :class => "col-sm-1 control-label"%>
			<div class="col-sm-3">
			<%= f.text_field :nome, :class =>"form-control" %>
			</div>	
			
			<%= f.label :email, 'Email', :class => "col-sm-1 control-label"%>
			<div class="col-sm-3">
			<%= f.email_field :email, :class =>"form-control" %>
			</div>		
	  	</div>
	</div>
	<div class="form-wrapper-group">
		<div class="form-group">
			<%= f.label :password, 'Senha', :class => "col-sm-1 control-label"%>
			<div class="col-sm-3">
			<%= f.password_field :password, :class =>"form-control" %>
			</div>	
			
			<%= f.label :password_confirmation, 'Senha', :class => "col-sm-1 control-label"%>
			<div class="col-sm-3">
			<%= f.password_field :password_confirmation, :class =>"form-control" %>
			</div>			
	  	</div>
	</div>
	
  <div class="actions">
    <%= f.submit 'Salvar', :class => "btn btn-success" %>
	<%= link_to 'Cancelar', users_path,  :class => "btn btn-danger" %>
  </div>
<% end %>

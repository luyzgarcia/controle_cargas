	<div id="painel_conteudo">
		<br/>
		
		<% if !flash.empty? %>
			<%if flash[:error] -%>
				<div class="panel panel-info">
		    <% end -%>
		    <%if flash[:notice] -%>
				<div class="panel panel-info">
		    <% end -%>
		      <div class="panel-heading">
		        <h3 class="panel-title">Atenção</h3>
		      </div>
		      <div class="panel-body">
		        <% flash.each do |name, msg| -%>
			      <%= content_tag :div, msg%>
			    <% end %>
		      </div>
		    </div>
		<% end %>
		
	    
		<%= yield %>
	</div>

</body>
</html>

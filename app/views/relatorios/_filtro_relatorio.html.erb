<h4>Selecione os filtros desejados e clique em filtrar</h4>
<br/>


<div class="form-horizontal" role="form">
	<%= form_tag '',:method => :get, format: :pdf do %>
	<div class="form-wrapper-group">
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">Código</label>
			<div class="col-sm-2">
				<%= text_field_tag :id %>
			</div>
	  	</div>
	  	<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">Remetente</label>
			<div class="col-sm-2">
				<%= text_field_tag :remetente %>
			</div>
	  	</div>
	</div>
	
	<%= submit_tag 'Gerar relatório', :class => 'btn btn-primary' %>
	
	
	<% end %>
</div>
	



<% @registros.each do |reg| %>
	<p><%= reg.id %></p>
<% end %>
